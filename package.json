{
  "name": "@internetarchive/metadata-service",
  "version": "1.0.2",
  "description": "A service for fetching metadata about items in the Internet Archive",
  "license": "AGPL-3.0-only",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "concurrently --kill-others --names tsc,web-dev-server \"npm run tsc:watch\" \"web-dev-server --app-index demo/index.html --node-resolve --open --watch\"",
    "tsc:watch": "tsc --watch",
    "docs": "typedoc ./index.ts",
    "prepare": "tsc",
    "lint:eslint": "eslint .",
    "format:eslint": "eslint . --fix",
    "lint:prettier": "prettier \"**/*.js\" \"**/*.ts\" --check",
    "format:prettier": "prettier \"**/*.js\" \"**/*.ts\" --write",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "circular": "madge --circular --extensions ts .",
    "test": "tsc && npm run lint && npm run circular && web-test-runner --coverage",
    "test:watch": "web-test-runner --watch",
    "codecov": "npx codecov"
  },
  "dependencies": {
    "@internetarchive/field-parsers": "^0.1.4",
    "@internetarchive/iaux-item-metadata": "^1.0.3",
    "@internetarchive/result-type": "^0.0.1"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^12.0.3",
    "@open-wc/testing": "^4.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.6",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@web/dev-server": "^0.4.6",
    "@web/test-runner": "^0.19.0",
    "concurrently": "^5.1.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^10.0.0",
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0",
    "madge": "^8.0.0",
    "prettier": "^3.4.2",
    "tslib": "^2.8.1",
    "typedoc": "^0.27.6",
    "typescript": "^5.7.3"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
